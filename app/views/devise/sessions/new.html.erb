<div class="text-center">
  <%= image_tag 'logo.jpg', class: 'rounded-circle primary-logo w-25 mb-2' %>
  <p><span data-controller="typed" class="text-primary"></span></p>

  <h1 class="title mt-2"><span class="text-primary">i</span>Care</h1>
  <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Senha",
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary m-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
