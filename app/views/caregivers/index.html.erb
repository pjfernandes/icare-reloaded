<h2 class="title mb-2 text-center"><i class="fas fa-heart text-primary"></i> Cuidadores</h2>

<div style="width: 100%; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="pk.eyJ1IjoicGpmZXJuYW5kZXMiLCJhIjoiY2t1c291Z3lzNWg2bzJvbW5kNWNhbnZhaCJ9.eYxvagOUGuS5qDo-zOfRCA"></div>

<div class="caregivers-container ">
  <%@caregivers.each do |caregiver|%>
    <div class="card-product mt-3 mb-4 rounded d-flex justify-content-between p-2 border border-primary rounded">
      <div class="card-product-infos text-break">
        <h6><i class="fas fa-heart text-danger"></i> <%=caregiver.care_type.capitalize%></h6>
        <p><i class="fas fa-user text-primary"></i> <%=caregiver.first_name.capitalize + " " + caregiver.last_name.capitalize %></p>
        <p><i class="fas fa-globe-americas text-primary"></i> <%=caregiver.street + ", " + caregiver.city%></p>
      </div>
      <div class="buttons m-1">
        <%= link_to "Info", caregiver_path(caregiver), class:"btn btn-secondary btn-sm text-white" %>
      </div>
    </div>
  <%end%>
</div>
